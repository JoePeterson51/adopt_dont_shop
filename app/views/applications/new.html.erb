<h1>Pet application</h1>
<%= form_with url: "/applications/", method: :post, local: true do |f| %>
  <%= f.hidden_field :application_status, :value => "In Progress" %>

  <%= f.label :name %><br>
  <%= f.text_field :name %><br>

  <%= f.label :street_address %><br>
  <%= f.text_field :street_address %><br>

  <%= f.label :city %><br>
  <%= f.text_field :city %><br>

  <%= f.label :state %><br>
  <%= f.text_field :state %><br>

  <%= f.label :zip_code %><br>
  <%= f.text_field :zip_code %><br>
  <br>
  <%= f.submit "Submit" %>
<% end %>